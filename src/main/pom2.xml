<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0
		http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>sc.fiji</groupId>
        <artifactId>pom-fiji</artifactId>
        <version>7.1.2</version>
        <relativePath />
    </parent>

    <groupId>sc.fiji.plugin.maars</groupId>
    <artifactId>CellStateAnalysis</artifactId>
    <version>1.0</version>

    <name>plugins/MAARS/CellStateAnalysis.jar</name>
    <description>measure, save and load cell features</description>

    <developers>
        <developer>
            <id>BioinfoTongLI</id>
            <name>Tong LI</name>
            <email>tongli.bioinfo@gmail.com</email>
        </developer>
    </developers>

    <scm>
        <connection>scm:git:git://github.com/bnoi/MAARS</connection>
        <developerConnection>scm:git:git@github.com:bnoi/MAARS</developerConnection>
        <tag>HEAD</tag>
        <url>https://github.com/bnoi/MAARS</url>
    </scm>

    <properties>
        <main-class>CellStateAnalysis</main-class>
    </properties>

    <dependencies>
        <!-- ImageJ dependencies -->
        <dependency>
            <groupId>net.imagej</groupId>
            <artifactId>ij</artifactId>
        </dependency>
        <!-- OME dependencies -->
        <!-- ImgLib2 dependencies -->
        <!-- Fiji dependencies -->
        <dependency>
            <groupId>ome</groupId>
            <artifactId>bio-formats_plugins</artifactId>
        </dependency>
        <dependency>
            <groupId>net.imglib2</groupId>
            <artifactId>imglib2</artifactId>
        </dependency>
        <dependency>
            <groupId>sc.fiji</groupId>
            <artifactId>TrackMate_</artifactId>
            <version>2.7.2</version>
        </dependency>
        <dependency>
            <groupId>net.imglib2</groupId>
            <artifactId>imglib2-ij</artifactId>
            <version>2.0.0-beta-29</version>
        </dependency>
        <dependency>
            <groupId>net.imagej</groupId>
            <artifactId>imagej-common</artifactId>
            <version>0.12.2</version>
        </dependency>
        <dependency>
            <groupId>org.scijava</groupId>
            <artifactId>scijava-common</artifactId>
            <version>2.38.2</version>
        </dependency>
                                        
        <!-- MAARS local dependencies (mainly Micro-Manager) -->
        <dependency>
            <groupId>org.mm</groupId>
            <artifactId>mmcorej</artifactId>
            <version>1.0</version>
            <scope>system</scope>
            <systemPath>${basedir}/../jars/MMCoreJ.jar</systemPath>
        </dependency>
        <dependency>
            <groupId>org.mm</groupId>
            <artifactId>mmj</artifactId>
            <version>1.0</version>
            <scope>system</scope>
            <systemPath>${basedir}/../jars/MMJ_.jar</systemPath>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <artifactId>maven-jar-plugin</artifactId>
                <configuration>
                    <archive>
                        <manifest>
                            <mainClass>${main-class}</mainClass>
                        </manifest>
                    </archive>
                </configuration>
            </plugin>
        </plugins>
    </build>

    <repositories>
        <repository>
            <id>imagej.public</id>
            <url>http://maven.imagej.net/content/groups/public</url>
        </repository>
    </repositories>

</project>
